{
  "title": "Baro Spring Boot 모니터링",
  "uid": "baro-spring-boot",
  "tags": ["spring-boot", "baro"],
  "timezone": "browser",
  "editable": true,
  "schemaVersion": 16,
  "version": 1,
  "refresh": "10s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "애플리케이션 상태",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "up{job=\"spring-actuator\"}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "JVM 메모리 사용량",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{area=\"heap\"}",
          "refId": "A",
          "legendFormat": "사용 중"
        },
        {
          "expr": "jvm_memory_max_bytes{area=\"heap\"}",
          "refId": "B",
          "legendFormat": "최대"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 4
      },
      "yaxes": [
        {
          "format": "bytes"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 3,
      "title": "HTTP 요청 수",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_count[1m])",
          "refId": "A",
          "legendFormat": "{{uri}}"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 4
      }
    },
    {
      "id": 4,
      "title": "데이터베이스 커넥션",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "hikaricp_connections_active",
          "refId": "A",
          "legendFormat": "Active"
        },
        {
          "expr": "hikaricp_connections_idle",
          "refId": "B",
          "legendFormat": "Idle"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      }
    }
  ]
}
